<%- include('../includes/start'); %>

<div class="container ">
    <div class="constainer mb-4">
        <h3>Remplissez pour ajouter une commission:</h3>
    </div>

    <% if (errors[0]) { %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= errors[0].msg %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% } %>

    <div class="form-group w-50">
        <form method="POST" action="/addCommission">
            <div class="form-group">
                <label for="nom">Nom de la commission</label>
                <input type="text" class="form-control" id="nom" name="nom"
                    placeholder="Entrer le nom de la commission">
            </div>

            <button type="submit" class="btn btn-primary">Ajouter</button>
        </form>
    </div>
</div>






<%- include('../includes/end'); %>