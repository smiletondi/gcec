<%- include('../includes/start'); %>

<div class="container">
    <h3><%= conseil.nom %> ( <%= conseil.debutPeriode %> - <%= conseil.finPeriode %> )</h3>
    <div class="d-flex mb-4">
        <div class="btn-group mr-3">
            <a class="btn btn-primary " href="/addMember?conseil=<%= conseil.id %>">+ Ajouter un membre</a>
            <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item bg-light" href="/ajoutExeptionnel?conseil=<%= conseil.id %>">Ajout
                    exceptionnel</a>
            </div>
        </div>
        <a class="btn btn-info mr-4" href="/commissionList?conseil=<%= conseil.id %>">Voir liste des commissions</a>
        <a target="_blank" class="btn btn-success" href="/download?conseil=<%= conseil.id %>">Telecharger le rapport</a>
        <hr>
    </div>
</div>
<div class="container">
    <% if (!currentMembers[0]){ %>
    <h4>Pas de membre courant pour l'instant veuillez en ajouter</h4>
    <hr>
    <% } else { %>
    <h4>Liste des membres courants</h4>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Sexe</th>
                    <th scope="col">Date d'entrée</th>
                    <th scope="col">Date de sortie</th>
                </tr>
            </thead>
            <tbody>
                <% currentMembers.forEach(member=>{ %>
                <tr>
                    <td scope="row" style="cursor: pointer;" data-toggle="modal" data-id="<%= member.id %>" data-target="#modifyModal">
                        <strong><%= member.nom %></strong></th>
                    <td ><%= member.prenom %>
                    </td>
                    <td><%= member.adresse %></td>
                    <td><%= member.tel %></td>
                    <td><%= member.sexe %></td>
                    <td><%= member.dateEntree %></td>
                    <td><%= member.dateSortie %></td>
                    <td>
                        <form action="/deleteMember" method="post">
                            <input type="hidden" name="memberId" value="<%= member.id %>">
                            <button class="btn btn-danger" type="button" data-toggle="modal"
                                data-target="#deleteModal">Supprimer</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </table>
    </div>
    <% } %>
    <% if (!oldMembers[0]){ %>
    <h4>Pas d'anciens membres</h4>
    <hr>
    <% } else { %>
    <h4>Liste des anciens membres</h4>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Sexe</th>
                    <th scope="col">Date d'entrée</th>
                    <th scope="col">Date de sortie</th>
                </tr>
            </thead>
            <tbody>
                <% oldMembers.forEach(member=>{ %>
                <tr>
                    <th style="cursor: pointer;" data-toggle="modal" data-id="<%= member.id %>" data-target="#modifyModal"><%= member.nom %></th>
                    <td><%= member.prenom %></td>
                    <td><%= member.adresse %></td>
                    <td><%= member.tel %></td>
                    <td><%= member.sexe %></td>
                    <td><%= member.dateEntree %></td>
                    <td><%= member.dateSortie %></td>
                </tr>
                <% }) %>
        </table>
    </div>
    <% } %>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation de suppression</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Etes-vous s&ucirc;r de vouloir supprimer ce membre ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                <button id="confButton" class="btn btn-danger btn-lg" type="button">Oui</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modifyModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation de modification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Etes-vous s&ucirc;r de vouloir modifier ce membre ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                <button id="modifyButton" class="btn btn-success btn-lg" type="button">Oui</button>
            </div>
        </div>
    </div>
</div>

<%- include('../includes/end'); %>

<script>
    $('#deleteModal').on('show.bs.modal', function (event) {
        const button = $(event.relatedTarget); // Button that triggered the modal

        let confButton = $('#confButton');
        confButton.click(() => {
            button.closest('form').submit(); // submit the form where the button is contained
        })
    })
    $('#modifyModal').on('show.bs.modal', function (event) {
        const button = $(event.relatedTarget); // Button that triggered the modal
        const id= button.data('id');
        
        let confButton = $('#modifyButton');
        console.log(confButton);
        confButton.click(() => {
            window.location.replace('/modifyMember/'+id);
        });
    })
</script>